<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="49dp">
    <ImageView
        android:id="@+id/wifi_only_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_like"/>
    <TextView
        android:id="@+id/wifi_only_text"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:text="@string/wifi_only_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wifi_only_icon"
        android:paddingTop="5dip"
        android:textSize="17sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:text="@string/wifi_only_tip"
        android:layout_alignBottom="@+id/wifi_only_icon"
        android:layout_toRightOf="@id/wifi_only_icon"
        android:textSize="10sp"
        android:textAlignment="center"
        android:id="@+id/textView" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/wifi_only_toggle"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:height="33dp"
        android:paddingTop="5dp"/>
</RelativeLayout>